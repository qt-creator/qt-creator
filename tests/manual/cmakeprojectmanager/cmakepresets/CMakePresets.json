{
  "version": 10,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "include": [
    "mingw.json", "msvc.json"
  ],
  "configurePresets": [
    {
      "name": "linux-gcc",
      "displayName": "Linux GCC",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-${presetName}",
      "graphviz" : "${sourceDir}/build-${presetName}/graphviz.dot",
      "toolchainFile" : "$env{HOME}/Qt/6.10.0/gcc_64/lib/cmake/Qt6/qt.toolchain.cmake",
      "condition" : {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "macos-clang",
      "displayName": "macOS Clang",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-${presetName}",
      "graphviz" : "${sourceDir}/build-${presetName}/graphviz.dot",
      "toolchainFile" : "$env{HOME}/Qt/6.10.0/macos/lib/cmake/Qt6/qt.toolchain.cmake",
      "condition" : {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    }
  ]
}
