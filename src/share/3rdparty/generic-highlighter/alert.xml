    <list name="alerts_hi">
      <item>ALERT</item>
      <item>ATTENTION</item>
      <item>DANGER</item>
      <item>HACK</item>
      <item>SECURITY</item>
    </list>
    <list name="alerts_mid">
      <item>BUG</item>
      <item>FIXME</item>
      <item>DEPRECATED</item>
      <item>TASK</item>
      <item>TODO</item>
      <item>TBD</item>
      <item>WARNING</item>
      <item>CAUTION</item>
      <item>NOLINT</item>
    </list>
    <list name="alerts_lo">
      <item>###</item>
      <item>NOTE</item>
      <item>NOTICE</item>
      <item>TEST</item>
      <item>TESTING</item>
