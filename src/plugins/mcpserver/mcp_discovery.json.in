{
  "mcp": {
    "name": "Qt Creator MCP",
    "description": "Model Context Protocol server for Qt Creator IDE integration",
    "version": "2024-11-05",
    "author" : "The Qt Company Ltd",
    "license": "LicenseRef-Qt-Commercial OR GPL-3.0-only WITH Qt-GPL-exception-1.0"
  },
  "server": {
    "name": "Qt Creator MCP Server",
    "version": "@IDE_VERSION@",
    "transport": "http",
    "host": "localhost",
    "port": 3001,
    "protocols": ["http", "tcp"],
    "capabilities": {
      "tools": {
        "listChanged": false
      }
    }
  },
  "tools": [
    {
      "name": "build",
      "description": "Build the current Qt Creator project"
    },
    {
      "name": "getBuildStatus",
      "description": "Get current build progress and status"
    },
    {
      "name": "debug",
      "description": "Start debugging the current project"
    },
    {
      "name": "openFile",
      "description": "Open a file in Qt Creator",
      "parameters": {
        "path": {
          "type": "string",
          "description": "Path to the file to open",
          "required": true
        }
      }
    },
    {
      "name": "listProjects",
      "description": "List all available projects"
    },
    {
      "name": "listBuildConfigs",
      "description": "List available build configurations"
    },
    {
      "name": "switchBuildConfig",
      "description": "Switch to a specific build configuration",
      "parameters": {
        "name": {
          "type": "string",
          "description": "Name of the build configuration to switch to",
          "required": true
        }
      }
    },
    {
      "name": "runProject",
      "description": "Run the current project"
    },
    {
      "name": "cleanProject",
      "description": "Clean the current project"
    },
    {
      "name": "listOpenFiles",
      "description": "List currently open files"
    },
    {
      "name": "listSessions",
      "description": "List available sessions"
    },
    {
      "name": "loadSession",
      "description": "Load a specific session",
      "parameters": {
        "sessionName": {
          "type": "string",
          "description": "Name of the session to load",
          "required": true
        }
      }
    },
    {
      "name": "listIssues",
      "description": "List current issues (warnings and errors)"
    },
    {
      "name": "quit",
      "description": "Quit Qt Creator"
    },
    {
      "name": "getCurrentProject",
      "description": "Get the currently active project"
    },
    {
      "name": "getCurrentBuildConfig",
      "description": "Get the currently active build configuration"
    },
    {
      "name": "getCurrentSession",
      "description": "Get the currently active session"
    },
    {
      "name": "saveSession",
      "description": "Save the current session"
    }
  ],
  "installation": {
    "platform": "@CMAKE_SYSTEM_NAME@",
    "installPath": "@CMAKE_INSTALL_PREFIX@",
    "pluginPath": "@QTCREATOR_PLUGINS_DIR@",
    "installedAt": "@CMAKE_CURRENT_BINARY_DIR@"
  },
  "discovery": {
    "file": "mcp_plugin_discovery.json",
    "generated": true,
    "lastUpdated": "@CMAKE_CURRENT_LIST_FILE@"
  }
}
